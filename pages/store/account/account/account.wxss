@import "../../wxss/style.wxss"
.btn-area {
  width: 100%;
  padding-top:80rpx;
}

.btn-area .content {
    margin-left: 80rpx;
    margin-right:80rpx;
}
.btn-area .content .scan {
    width: 48rpx;
}

.btn-area .content .error  {
  font-size: 32rpx;
}

.btn-area input{
  border-bottom: 4rpx solid #f2f2f2;
  margin-top:20rpx;
  font-weight: 500;
  font-size:48rpx;
  height: 48rpx;
  padding:10rpx;
}

.btn-title {
  width: 100%;
  height: 200rpx;
  border: 1px solid #232323;
  background: #232323;
}

.body-photo{
  float: left;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-left: 30rpx;
}


.body-title{
  color:white;
  margin-top:50rpx;
  font-size: 35rpx;
  position: relative;
  left: 40rpx;
}
.body-num{
  color:white;
  font-size: 35rpx;
  margin-top: 20rpx;
  margin-left:40rpx;
  float: left;
}
.body-name{
  color:white;
  margin-top: 20rpx;
  margin-left:40rpx;
  font-size: 35rpx;
  float: left;
  /*margin-top: 20rpx;*/  
}
.but{
  margin-top: 30rpx;
}
.ewm-logo{
	width: 10%;
	height: 50rpx;
	position: absolute;
	top: 20rpx;
	left: 90%;
	
}
/*中部部分*/
.view-lar{
	width: 90%;
	height: 200rpx;
	text-align: center;
	padding-top:20rpx;
	padding-bottom: 20rpx;
	margin: 0 auto;
}
.center-left{
	width: 49%;
	height: 200rpx;
	border-right: 1px solid #ccc;
	float:left;
}
.center-right{
	width: 49%;
	height: 200rpx;
	border-left: 1px solid #ccc;
	float:left;
}
.center-mes{
	margin-top: 50rpx;
	font-size: 30rpx;
}
.center-mes-num{
	color: #81c7d1;
	margin-top: 20rpx;
}
/*中部结束*/
.center-ljcz{
	margin-top: 40rpx;
